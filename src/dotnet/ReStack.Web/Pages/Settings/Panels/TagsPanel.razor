@inherits BaseComponent

<div class="flex items-center justify-between text-sm mb-4">
    <div class="flex items-center">
        <div class="me-4 p-1">
            <button class="me-4 border-b-4 px-1 cursor-pointer border-primary-500">Tags</button>
        </div>
    </div>
</div>

<Panel CssClass="p-3" Loading="IsLoading">

    <div class="absolute end-0 top-0 me-2 mt-2 md:me-3 md:mt-3">
        <button class="btn-primary" @onclick=Add>Add</button>
    </div>

    @if (!IsLoading)
    {
        @if (Tags.Count == 0)
        {
            <div class="w-full h-full flex justify-center items-center min-h-20">
                <p class="text-sm md:text-md">No tags found, go <button @onclick="Add" class="link">add</button> your first one!</p>
            </div>
        }
        else
        {
            <div class="mt-16">
                <div class="flex gap-2 items-baseline text-2xs mt-2 mb-1">
                    <div class="w-full ps-1">
                        <p>Name</p>
                    </div>
                    <div class="w-full ps-3">
                        <p>Color</p>
                    </div>
                    <div class="min-w-10 text-center">
                        <p>Edit</p>
                    </div>
                    <div class="min-w-10 text-center">
                        <p>Delete</p>
                    </div>
                </div>

                <div class="max-h-60 overflow-auto">
                    @foreach (var tag in Tags)
                    {
                        <div class="flex gap-2 items-center"
                             @ondblclick="async() => await Edit(tag)">

                            <InputText @bind-Value="tag.Name"
                                       class="block h-[2rem] mt-2 w-full bg-gray-200 dark:bg-neutral-600 text-gray-700 dark:text-gray-100 text-sm border-none rounded py-2 md:py-3 focus:bg-white focus:border-gray-500 focus:ring-0"
                                       disabled
                                       @ondblclick="async() => await Edit(tag)" />

                            <input @bind-value="@tag.HexColor"
                                   class="w-full bg-gray-300 dark:bg-neutral-700 text-gray-700 dark:text-gray-100 text-sm border-none rounded"
                                   type="color"
                                   disabled 
                                   @ondblclick="async() => await Edit(tag)" />

                            <div @onclick="async() => await Edit(tag)"
                                 class="min-w-10 text-center cursor-pointer">
                                <span>
                                    <Icon Type="FontAwesomeIcons.Pencil" Size="IconSize.Sm" />
                                </span>
                            </div>
                            <div @onclick="async() => await Delete(tag)"
                                 class="min-w-10 text-center cursor-pointer">
                                <span>
                                    <Icon Type="FontAwesomeIcons.Xmark" Size="IconSize.Sm" />
                                </span>
                            </div>

                        </div>
                    }
                </div>
            </div>
        }
    }

</Panel>